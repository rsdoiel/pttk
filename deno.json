{
  "tasks": {
    "build": "deno compile --target x86_64-unknown-linux-gnu --output pttk-linux-amd64 pttk.ts",
    "build:mac": "deno compile --target x86_64-apple-darwin --output pttk-macos-amd64 pttk.ts",
    "build:win": "deno compile --target x86_64-pc-windows-msvc --output pttk-windows-amd64.exe pttk.ts",
    "build:arm64": "deno compile --target aarch64-unknown-linux-gnu --output pttk-linux-arm64 pttk.ts",
    "build:arm64:mac": "deno compile --target aarch64-apple-darwin --output pttk-macos-arm64 pttk.ts",
    "build:arm64:win": "deno compile --target aarch64-pc-windows-msvc --output pttk-windows-arm64.exe pttk.ts",
    "cross-compile": "deno run --allow-read --allow-write cross_compile.ts",
    "test": "deno test",
    "test:sitemapper": "deno test sitemapper_test.ts",
    "test:frontmatter": "deno test --allow-read --allow-write frontmatter_test.ts",
    "test:rss_generator": "deno test rss_generator_test.ts",
    "test:blogit": "deno test blogit_test.ts",
    "test:series": "deno test series_test.ts",
    "test:makepages": "deno test makepages_test.ts",
    "test:all": "deno test --allow-read --allow-write sitemapper_test.ts frontmatter_test.ts rss_generator_test.ts blogit_test.ts series_test.ts makepages_test.ts"
  },
  "imports": {
    "@libs/markdown": "jsr:@libs/markdown@^2.0.2",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/fs": "jsr:@std/fs@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/yaml": "jsr:@std/yaml@^1.0.5"
  }
}
